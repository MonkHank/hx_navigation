<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape >
            <!-- 填充 -->
            <solid
                android:color="#ffffac08"/><!-- 填充的颜色 -->
            <corners
                android:radius="9dp"
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp"
                android:bottomLeftRadius="4dp"
                android:bottomRightRadius="4dp"/><!-- 设置圆角半径 -->
        </shape>
    </item>

    <item android:state_pressed="true" >
        <shape >
            <!-- 填充 -->
            <solid
                android:color="#ffffa90f"/><!-- 填充的颜色 -->
            <!-- 描边 -->
            <stroke
                android:width="2dp"
                android:color="#fff50fff"
                android:dashWidth="1dp"
                android:dashGap="2dp"/>

            <corners
                android:radius="9dp"
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp"
                android:bottomLeftRadius="4dp"
                android:bottomRightRadius="4dp"/><!-- 设置圆角半径 -->
        </shape>
    </item>
</selector>
