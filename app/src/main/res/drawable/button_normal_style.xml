<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape >
            <stroke
                android:width="0.5dp"
                android:color="#000000"
                />
            <gradient 
                android:startColor="#ff999999"
                android:endColor="#ff999999"
                />
            <padding 
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"
                android:bottom="2dp"
                />
        </shape>
    </item>
    <item>
        <shape >
            <stroke
                android:width="0.5dp"
                android:color="#000000"
                />
            <gradient 
                android:startColor="#ffcccccc"
                android:endColor="#ffcccccc"
                />
            <padding 
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"
                android:bottom="2dp"
                />
        </shape>
    </item>
</selector>
