<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:state_focused="true"
        android:color="@color/blackTransparentF"
        >
        <shape >
            <!--边框-->
            <stroke
                android:width="1dp"
                android:color="#3E71BC"
                />
            <!-- 填充 -->
            <solid
                android:color="#00BB00"/><!-- 填充的颜色 -->
            <padding 
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"/>
        </shape>
    </item>
    <item 
        android:state_enabled="false"
        android:color="@color/blackTransparentF">

        <shape >
            <stroke
                android:width="0.5dp"
                android:color="#000000"
                />
            <!-- 填充 -->
            <solid
                android:color="#D3D3D3"/><!-- 填充的颜色 -->
            <padding 
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"/>
            <!--颜色渐变-->
            <!--<gradient
                android:startColor="#F5F5F5"
                android:endColor="#D3D3D3"
                android:gradientRadius="180"
                />-->
        </shape>
    </item>

    <item
        android:state_enabled="true"
        android:color="@color/blackTransparentF">
        <shape >
            <stroke
                android:width="0.5dp"
                android:color="#000000"
                />
            <!-- 填充 -->
            <solid
                android:color="#00BB00"/><!-- 填充的颜色 -->
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"/>
        </shape>
    </item>
</selector>
